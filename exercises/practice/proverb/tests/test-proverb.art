import.version:3.0.0 {unitt}! 
import {src/proverb}!

describe "Proverb" [
    it "zero pieces" [
        expects.be:'equal? @[
            express ""
            express recite []
        ]
    ]

    it.skip "one piece" [
        expects.be:'equal? @[
            express "And all for the want of a nail."
            express recite ["nail"]
        ]
    ]

    it.skip "two pieces" [
        expects.be:'equal? @[
            express {
                For want of a nail the shoe was lost.
                And all for the want of a nail.
            }
            express recite ["nail" "shoe"]
        ]
    ]

    it.skip "three pieces" [
        expects.be:'equal? @[
            express {
                For want of a nail the shoe was lost.
                For want of a shoe the horse was lost.
                And all for the want of a nail.
            }
            express recite ["nail" "shoe" "horse"]
        ]
    ]

    it.skip "full proverb" [
        expects.be:'equal? @[
            express {
                For want of a nail the shoe was lost.
                For want of a shoe the horse was lost.
                For want of a horse the rider was lost.
                For want of a rider the message was lost.
                For want of a message the battle was lost.
                For want of a battle the kingdom was lost.
                And all for the want of a nail.
            }
            express recite [
                "nail"
                "shoe"
                "horse"
                "rider"
                "message"
                "battle"
                "kingdom"
            ]
        ]
  ]

    it.skip "four pieces modernized" [
        expects.be:'equal? @[
            express {
                For want of a pin the gun was lost.
                For want of a gun the soldier was lost.
                For want of a soldier the battle was lost.
                And all for the want of a pin.
            }
            express recite ["pin" "gun" "soldier" "battle"]
        ]
    ]
]