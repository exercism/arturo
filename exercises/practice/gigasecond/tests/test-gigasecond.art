import {unitt}!
import {src/gigasecond}!

suite "Gigasecond" [
    test "date only specification of time" [
        result: gigasecond to :date.format: "yyyy-MM-dd hh:mm:sszz" "2011-04-25 00:00:00+00"
        assert -> result = to :date.format: "yyyy-MM-dd hh:mm:sszz" "2043-01-01 01:46:40+00"
    ]

    test.skip "second test for date only specification of time" [
        result: gigasecond to :date.format: "yyyy-MM-dd hh:mm:sszz" "1977-06-13 00:00:00+00"
        assert -> result = to :date.format: "yyyy-MM-dd hh:mm:sszz" "2009-02-19 01:46:40+00"
    ]

    test.skip "third test for date only specification of time" [
        result: gigasecond to :date.format: "yyyy-MM-dd hh:mm:sszz" "1959-07-19 00:00:00+00"
        assert -> result = to :date.format: "yyyy-MM-dd hh:mm:sszz" "1991-03-27 01:46:40+00"
    ]

    test.skip "full time specified" [
        result: gigasecond to :date.format: "yyyy-MM-dd hh:mm:sszz" "2015-01-24 22:00:00+00"
        assert -> result = to :date.format: "yyyy-MM-dd hh:mm:sszz" "2046-10-02 23:46:40+00"
    ]

    test.skip "full time with day roll-over" [
        result: gigasecond to :date.format: "yyyy-MM-dd hh:mm:sszz" "2015-01-24 23:59:59+00"
        assert -> result = to :date.format: "yyyy-MM-dd hh:mm:sszz" "2046-10-03 01:46:39+00"
    ]
]
