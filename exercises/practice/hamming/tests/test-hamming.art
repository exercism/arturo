import.version:2.0.1 {unitt}!
import {src/hamming}!

describe "Hamming" [
    it "empty strands" [
        expects.be:'equal? @[0 distance "" ""]
    ]

    it.skip "single letter identical strands" [
        expects.be:'equal? @[0 distance "A" "A"]
    ]

    it.skip "long identical strands" [
        expects.be:'equal? @[
            0
            distance "GGACTGAAATCTG" "GGACTGAAATCTG"
        ]
    ]

    it.skip "single letter different strands" [
        expects.be:'equal? @[1 distance "G" "T"]
    ]

    it.skip "long different strands" [
        expects.be:'equal? @[
            9
            distance "GGACGGATTCTG" "AGGACGGATTCT"
        ]
    ]

    it.skip "disallow empty first strand" [
        expects.be:'null? @[distance "" "G"]
    ]

    it.skip "disallow first strand longer" [
        expects.be:'null? @[distance "AATG" "AAA"]
    ]

    it.skip "disallow second strand longer" [
        expects.be:'null? @[distance "ATA" "AGTG"]
    ]

    it.skip "disallow empty second strand" [
        result: distance "G" ""
        expects.be:'null? @[distance "G" ""]
    ]
]
