import.version:3.0.0 {unitt}! 
import {src/phone-number}!

describe "Phone Number" [
    it "cleans the number" [
        expects.be:'equal? @[
            express "2234567890"
            express clean "(223) 456-7890"   
        ]
    ]

    it.skip "cleans numbers with dots" [
        expects.be:'equal? @[
            express "2234567890"
            express clean "223.456.7890"
        ]
    ]

    it.skip "cleans numbers with multiple spaces" [
        expects.be:'equal? @[
            express "2234567890"
            express clean "223 456   7890   "
        ]
    ]

    it.skip "invalid when 9 digits" [
        expects.be:'null? @[clean "123456789"]
    ]

    it.skip "invalid when 11 digits does not start with a 1" [
        expects.be:'null? @[clean "22234567890"]
    ]
    
    it.skip "valid when 11 digits and starting with 1" [
        expects.be:'equal? @[
            express "2234567890"
            express clean "12234567890"
        ]
    ]
    
    it.skip "valid when 11 digits and starting with 1 even with punctuation" [
        expects.be:'equal? @[
            express "2234567890"
            express clean "+1 (223) 456-7890"
        ]
    ]

    it.skip "invalid when more than 11 digits" [
        expects.be:'null? @[clean "321234567890"]
    ]

    it.skip "invalid with letters" [
        expects.be:'null? @[clean "523-abc-7890"]
    ]

    it.skip "invalid with punctuations" [
        expects.be:'null? @[clean "523-@:!-7890"]
    ]

    it.skip "invalid if area code starts with 0" [
        expects.be:'null? @[clean "(023) 456-7890"]
    ]

    it.skip "invalid if area code starts with 1" [
        expects.be:'null? @[clean "(123) 456-7890"]
    ]

    it.skip "invalid if exchange code starts with 0" [
        expects.be:'null? @[clean "(223) 056-7890"]
    ]

    it.skip "invalid if exchange code starts with 1" [
        expects.be:'null? @[clean "(223) 156-7890"]
    ]

    it.skip "invalid if area code starts with 0 on valid 11-digit number" [
        expects.be:'null? @[clean "1 (023) 456-7890"]
    ]

    it.skip "invalid if area code starts with 1 on valid 11-digit number" [
        expects.be:'null? @[clean  "1 (123) 456-7890"]
    ]

    it.skip "invalid if exchange code starts with 0 on valid 11-digit number" [
        expects.be:'null? @[clean "1 (223) 056-7890"]
    ]

    it.skip "invalid if exchange code starts with 1 on valid 11-digit number" [
        expects.be:'null? @[clean "1 (223) 156-7890"]
    ]
]
