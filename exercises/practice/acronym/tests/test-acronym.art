import.version:2.0.1 {unitt}!
import {src/acronym}!

describe "Acronym" [
    it "basic" [
        result: abbreviate "Portable Network Graphics"
        expects.be: 'equal? @["PNG" result]
    ]

    it.skip "lowercase words" [
        result: abbreviate "Ruby on Rails"
        expects.be: 'equal? @["ROR" result]
    ]

    it.skip "punctuation" [
        result: abbreviate "First In, First Out"
        expects.be: 'equal? @["FIFO" result]
    ]

    it.skip "all uppercase word" [
        result: abbreviate "GNU Image Manipulation Program"
        expects.be: 'equal? @["GIMP" result]
    ]

    it.skip "punctuation without whitespace" [
        result: abbreviate "Complementary metal-oxide semiconductor"
        expects.be: 'equal? @["CMOS" result]
    ]

    it.skip "very long abbreviation" [
        result: abbreviate "Rolling On The Floor Laughing So Hard That My Dogs Came Over And Licked Me"
        expects.be: 'equal? @["ROTFLSHTMDCOALM" result]
    ]

    it.skip "consecutive delimiters" [
        result: abbreviate "Something - I made up from thin air"
        expects.be: 'equal? @["SIMUFTA" result]
    ]

    it.skip "apostrophes" [
        result: abbreviate "Halley\'s Comet"
        expects.be: 'equal? @["HC" result]
    ]

    it.skip "underscore emphasis" [
        result: abbreviate "The Road _Not_ Taken"
        expects.be: 'equal? @["TRNT" result]
    ]
]
