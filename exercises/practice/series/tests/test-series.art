import.version:2.0.1 {unitt}!
import {src/series}!

describe "Series" [
    it "slices of one from one" [
        expects.be:'equal? @[
            express ["1"]
            express slices "1" 1
        ]
    ]

    it.skip "slices of one from two" [
        expects.be:'equal? @[
            express ["1" "2"]
            express slices "12" 1
        ]
    ]

    it.skip "slices of two" [
        expects.be:'equal? @[
            express ["35"]
            express slices "35" 2
        ]
    ]

    it.skip "slices of two overlap" [
        expects.be:'equal? @[
            express ["91" "14" "42"]
            express slices "9142" 2
        ]
    ]

    it.skip "slices can include duplicates" [
        expects.be:'equal? @[
            express ["777" "777" "777" "777"]
            express slices "777777" 3
        ]
    ]

    it.skip "slices of a long series" [
        expects.be:'equal? @[
            express [
                "91849"
                "18493"
                "84939"
                "49390"
                "93904"
                "39042"
                "90424"
                "04243"
            ]
            express slices "918493904243" 5
        ]
    ]

    it.skip "slice length is too large" [
        expects.be:'null? @[slices "12345" 6]
    ]

    it.skip "slice length is way too large" [
        expects.be:'null? @[slices "12345" 42]
    ]

    it.skip "slice length cannot be zero" [
        expects.be:'null? @[slices "12345" 0]
    ]

    it.skip "slice length cannot be negative" [
        expects.be:'null? @[slices "123" neg 1]
    ]

    it.skip "empty series is invalid" [
        expects.be:'null? @[slices "" 1]
    ]
]
