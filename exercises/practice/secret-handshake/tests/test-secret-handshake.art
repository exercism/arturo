import.version:2.0.1 {unitt}!
import {src/secret-handshake}!

describe "Secret Handshake" [
    it "wink for 1" [
        expects.be:'equal? @[
            express ["wink"]
            express commands 1
        ]
    ]

    it.skip "double blink for 10" [
        expects.be:'equal? @[
            express ["double blink"]
            express commands 2
        ]
    ]

    it.skip "close your eyes for 100" [
        expects.be:'equal? @[
            express ["close your eyes"]
            express commands 4
        ]
    ]

    it.skip "jump for 1000" [
        expects.be:'equal? @[
            express ["jump"]
            express commands 8
        ]
    ]

    it.skip "combine two actions" [
        expects.be:'equal? @[
            express ["wink" "double blink"]
            express commands 3
        ]
    ]

    it.skip "reverse two actions" [
        expects.be:'equal? @[
            express ["double blink" "wink"]
            express commands 19
        ]
    ]

    it.skip "reversing one action gives the same action" [
        expects.be:'equal? @[
            express ["jump"]
            express commands 24
        ]
    ]

    it.skip "reversing no actions still gives no actions" [
        expects.be:'equal? @[
            express []
            express commands 16
        ]
    ]

    it.skip "all possible actions" [
        expects.be:'equal? @[
            express ["wink" "double blink" "close your eyes" "jump"]
            express commands 15
        ]
    ]

    it.skip "reverse all possible actions" [
        expects.be:'equal? @[
            express ["jump" "close your eyes" "double blink" "wink"]
            express commands 31
        ]
    ]

    it.skip "do nothing for zero" [
        expects.be:'equal? @[
            express []
            express commands 0
        ]
    ]
]

