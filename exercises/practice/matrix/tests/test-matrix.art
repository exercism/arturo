import.version:2.0.1 {unitt}!
import {src/matrix}!

describe "Matrix" [
    describe "Matrix - Row" [
        it "extract row fron one number matrix" [
            expects.be:'equal? @[
                express [1]
                express row "1" 1
            ]
        ]

        it.skip "can extract row" [
            matrix: {
                1 2
                3 4
            }
            expects.be:'equal? @[
                express [3 4]
                express row matrix 2
            ]
        ]

        it.skip "extract row where numbers have different widths" [
            matrix: {
                1 2
                10 20
            }
            expects.be:'equal? @[
                express [10 20]
                express row matrix 2
            ]
        ]

        it.skip "can extract row from non-square matrix with no corresponding column" [
            matrix: {
                1 2 3
                4 5 6
                7 8 9
                8 7 6
            }
            expects.be:'equal? @[
                express [8 7 6]
                express row matrix 4
            ]
        ]
    ]

    describe "Matrix - Column" [
        it.skip "extract column from one number matrix" [
            expects.be:'equal? @[
                express [1]
                express column "1" 1
            ]
        ]

        it.skip "can extract column" [
            matrix: {
                1 2 3
                4 5 6
                7 8 9
            }
            expects.be:'equal? @[
                express [3 6 9]
                express column matrix 3
            ]
        ]

        it.skip "can extract column from non-square matrix with no corresponding row" [
            matrix: {
                1 2 3 4
                5 6 7 8
                9 8 7 6
            }
            expects.be:'equal? @[
                express [4 8 6]
                express column matrix 4
            ]
        ]

        it.skip "extract column where numbers have different widths" [
            matrix: {
                89 1903 3
                18 3 1
                9 4 800
            }
            expects.be:'equal? @[
                express [1903 3 4]
                express column matrix 2
            ]
        ]
    ]
]
