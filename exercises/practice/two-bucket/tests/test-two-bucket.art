import.version:2.0.1 {unitt}!
import {src/two-bucket}!

describe "Two Bucket" [
    it "Measure using bucket one of size 3 and bucket two of size 5 - start with bucket one" [
        result: measure #[
            bucketOne: 3
            bucketTwo: 5
            goal: 1
            startBucket: "one"
        ]
        expects.be:'equal? @[
            express [4 "one" 5]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Measure using bucket one of size 3 and bucket two of size 5 - start with bucket two" [
        result: measure #[
            bucketOne: 3
            bucketTwo: 5
            goal: 1
            startBucket: "two"
        ]
        expects.be:'equal? @[
            express [8 "two" 3]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Measure using bucket one of size 7 and bucket two of size 11 - start with bucket one" [
        result: measure #[
            bucketOne: 7
            bucketTwo: 11
            goal: 2
            startBucket: "one"
        ]
        expects.be:'equal? @[
            express [14 "one" 11]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Measure using bucket one of size 7 and bucket two of size 11 - start with bucket two" [
        result: measure #[
            bucketOne: 7
            bucketTwo: 11
            goal: 2
            startBucket: "two"
        ]
        expects.be:'equal? @[
            express [18 "two" 7]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Measure one step using bucket one of size 1 and bucket two of size 3 - start with bucket two" [
        result: measure #[
            bucketOne: 1
            bucketTwo: 3
            goal: 3
            startBucket: "two"
        ]
        expects.be:'equal? @[
            express [1 "two" 0]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Measure using bucket one of size 2 and bucket two of size 3 - start with bucket one and end with bucket two" [
        result: measure #[
            bucketOne: 2
            bucketTwo: 3
            goal: 3
            startBucket: "one"
        ]
        expects.be:'equal? @[
            express [2 "two" 2]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Measure using bucket one much bigger than bucket two" [
        result: measure #[
            bucketOne: 5
            bucketTwo: 1
            goal: 2
            startBucket: "one"
        ]
        expects.be:'equal? @[
            express [6 "one" 1]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Measure using bucket one much smaller than bucket two" [
        result: measure #[
            bucketOne: 3
            bucketTwo: 15
            goal: 9
            startBucket: "one"
        ]
        expects.be:'equal? @[
            express [6 "two" 0]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Not possible to reach the goal" [
        expects.be:'null? @[
            measure #[
                bucketOne: 6
                bucketTwo: 15
                goal: 5
                startBucket: "one"
            ]
        ]
    ]

    it.skip "With the same buckets but a different goal, then it is possible" [
        result: measure #[
            bucketOne: 6
            bucketTwo: 15
            goal: 9
            startBucket: "one"
        ]
        expects.be:'equal? @[
            express [10 "two" 0]
            express @[result\moves result\goalBucket result\otherBucket]
        ]
    ]

    it.skip "Goal larger than both buckets is impossible" [
        expects.be:'null? @[
            measure #[
                bucketOne: 5
                bucketTwo: 7
                goal: 8
                startBucket: "one"
            ]
        ]
    ]
]
