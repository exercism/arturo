import.version:2.0.1 {unitt}!
import {src/armstrong-numbers}!

describe "Armstrong Numbers" [
    it "Zero is an Armstrong number" [
        expects.be:'true? [armstrong? 0]
    ]

    it.skip "Single digit numbers are Armstrong numbers" [
        expects.be:'true? [armstrong? 5]
    ]

    it.skip "There are no 2 digit Armstrong Numbers" [
        expects.be:'false? [armstrong? 10]
    ]

    it.skip "Three digit number that is not an Armstrong number" [
        expects.be:'false? [armstrong? 100]
    ]

    it.skip "Three digit number that is an Armstrong number" [
        expects.be:'true? [armstrong? 153]
    ]

    it.skip "Four digit number that is an Armstrong number" [
        expects.be:'true? [armstrong? 9474]
    ]

    it.skip "Four digit number that is not an Armstrong number" [
        expects.be:'false? [armstrong? 9475]
    ]

    it.skip "Seven digit number that is not an Armstrong number" [
        expects.be:'false? [armstrong? 9926314]
    ]

    it.skip "Seven digit number that is an Armstrong number" [
        expects.be:'true? [armstrong? 9926315]
    ]

    it.skip "Armstrong number containing seven zeroes" [
        expects.be:'true? [armstrong?
                           186709961001538790100634132976990]
    ]

    it.skip "The largest and last Armstrong number" [
        expects.be:'true? [armstrong?
                           115132219018763992565095597973971522401]
    ]
]
