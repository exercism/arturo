import.version:3.0.0 {unitt}! 
import {src/isbn-verifier}!

describe "ISBN Verifier" [
    it "valid ISBN" [
        expects.be:'true? @[valid? "3-598-21508-8"]
    ]

    it.skip "invalid ISBN check digit" [
        expects.be:'false? @[valid? "3-598-21508-9"]
    ]

    it.skip "valid ISBN with a check digit of 10" [
        expects.be:'true? @[valid? "3-598-21507-X"]
    ]

    it.skip "check digit is a character other than X" [
        expects.be:'false? @[valid? "3-598-21507-A"]
    ]

    it.skip "invalid check digit in ISBN is not treated as zero" [
        expects.be:'false? @[valid? "4-598-21507-B"]
    ]

    it.skip "invalid character in ISBN is not treated as zero" [
        expects.be:'false? @[valid? "3-598-P1581-X"]
    ]

    it.skip "X is only valid as a check digit" [
        expects.be:'false? @[valid? "3-598-2X507-9"]
    ]

    it.skip "only one check digit is allowed" [
        expects.be:'false? @[valid? "3-598-21508-96"]
    ]

    it.skip "X is not substituted by the value 10" [
        expects.be:'false? @[valid? "3-598-2X507-5"]
    ]

    it.skip "valid ISBN without separating dashes" [
        expects.be:'true? @[valid? "3598215088"]
    ]

    it.skip "ISBN without separating dashes and X as check digit" [
        expects.be:'true? @[valid? "359821507X"]
    ]

    it.skip "ISBN without check digit and dashes" [
        expects.be:'false? @[valid? "359821507"]
    ]

    it.skip "too long ISBN and no dashes" [
        expects.be:'false? @[valid? "3598215078X"]
    ]

    it.skip "too short ISBN" [
        expects.be:'false? @[valid? "00"]
    ]

    it.skip "ISBN without check digit" [
        expects.be:'false? @[valid? "3-598-21507"]
    ]

    it.skip "check digit of X should not be used for 0" [
        expects.be:'false? @[valid? "3-598-21515-X"]
    ]

    it.skip "empty ISBN" [
        expects.be:'false? @[valid? ""]
    ]

    it.skip "input is 9 characters" [
        expects.be:'false? @[valid? "134456729"]
    ]

    it.skip "invalid characters are not ignored after checking length" [
        expects.be:'false? @[valid? "3132P34035"]
    ]

    it.skip "invalid characters are not ignored before checking length" [
        expects.be:'false? @[valid? "3598P215088"]
    ]

    it.skip "input is too long but contains a valid ISBN" [
        expects.be:'false? @[valid? "98245726788"]
    ]
]
